@{
    ViewData["Title"] = "Gym Profile";
    ViewData.AddActivePage(ManageNavPages.GymProfile);
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="OldPassword">Gym Name</label>
                <input for="OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label for="NewPassword">Address</label>
                <input for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Phone</label>
                <input for="ConfirmPassword" class="form-control" />
            </div>
            <div class="forn-group">
                <button type="submit" class="btn btn-success pull-right">Update Gym Info</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

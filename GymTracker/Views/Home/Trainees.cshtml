@model TraineesViewModel
@{
    ViewData["Title"] = "Trainees";
}
<div class="x_panel">
    <div class="x_title">
        <h2>@ViewData["Title"]</h2>
        <a class="btn btn-round btn-success pull-right" asp-area="" asp-controller="Home" asp-action="NewTrainee">New Trainee</a>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        @*<p class="text-muted font-13 m-b-30">
                The Buttons extension for DataTables provides a common set of options, API methods and styling to display buttons on a page that will interact with a DataTable. The core library provides the based framework upon which plug-ins can built.
            </p>*@
        <table id="datatable-fixed-header" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Picture</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>City</th>
                </tr>
            </thead>
            @* Table row click handler
                                    @foreach (var user in Model.Users)
                    {
                            <tr onclick="location.href = '@(Url.Action("ShowProfile", "Users", new { userId = user.UserId }))'">
                                //rest of your markup for that table row
                            </tr>
                }*@
            <tbody>
                @*onclick="location.href = '@(Url.Action("EditTrainee", "Trainees", new { traineeId = trainee.traineeId }))'"*@
                @foreach (var trainee in Model.Trainees)
                {
                    <tr onclick="location.href='@(Url.Action("TraineeDetails", "Home", new { traineeId = trainee.Id }))">
                        @{
                            var base64 = Convert.ToBase64String(trainee.Picture);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        <td>
                            <img border=3 height=100 width=100 src="@imgSrc">
                        </td>
                        <td>@trainee.Name</td>
                        <td>@trainee.Surname</td>
                        <td>@trainee.Email</td>
                        <td>@trainee.PhoneNumber</td>
                        <td>@trainee.City</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



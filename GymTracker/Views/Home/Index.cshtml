                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class='input-group date' id='myDatepicker5'>
                                    <input id="enddate2" type='text' class="form-control" asp-for="EditEndDate" placeholder="DD/MM/YYYY HH:MM" required="required" />
